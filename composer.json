{
    "name": "DragonFly/TranslationManager",
    "type": "library",
    "description": "A laravel translation GUI, built with Vue",
    "keywords": [
        "DragonFly", "Laravel", "translations", "Vue", "manager",
        "TranslationManager", "happyDemon"
    ],
    "homepage": "https://github.com/DragonFly/translation-management",
    "license": "MIT",
    "authors": [
        {
            "name": "Maxim Kerstens",
            "email": "maxim@happydemon.xyz",
            "homepage": "https://happydemon.xyz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "illuminate/support": "~5.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "lord/laroute": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "DragonFly\\TranslationManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DragonFly\\TranslationManager\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
